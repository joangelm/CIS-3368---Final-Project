<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../partials/head'); %>
        <title>Login</title>
    </head>

    <body>
        <div class="bg-secondary-subtle d-flex justify-content-center align-items-center" style="height: 100vh">
            <div class="bg-white rounded-4 shadow-lg p-5">
                <form class="container" action="/process_login" method="POST">
                    <h1 class="fs-3 mb-4">USER LOGIN</h1>
                    <div class="form-group mb-3">
                        <label class="form-label fw-semibold" style="font-size: smaller" for="username">USERNAME</label>
                        <input class="form-control" id="username" type="text" name="username" required />
                    </div>
                    <div class="form-group mb-4">
                        <label class="form-label fw-semibold" style="font-size: smaller" for="">PASSWORD</label>
                        <input class="form-control" id="password" name="password" type="password" required />
                    </div>
                    <button type="submit" class="btn btn-dark rounded-pill px-5 py-3 fw-bold">Login</button>
                </form>
            </div>
        </div>
    </body>
</html>
